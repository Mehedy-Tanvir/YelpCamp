<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <% for(let campground of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-4">
                    <% if(campground.images.length){ %>
                        <img class="img-fluid" src="<%=campground.images[0].url%>" alt="" crossorigin="">
                        <% }else{ %>
                            <img src="https://res.cloudinary.com/dyan3gjyc/image/upload/v1680111086/YelpCamp/ysfptfxucjd4rhyiha9f.jpg"
                                alt="">
                            <% } %>
                </div>
                <div class="col-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=campground.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View <%=campground.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>